[
  {
    "name": "datadog-agent",
    "image": "public.ecr.aws/datadog/agent:latest",
    "cpu": 512,
    "memory": 512,
    "essential": true,
    "mountPoints": [
      {
        "containerPath": "\\\\.\\pipe\\docker_engine",
        "sourceVolume": "docker_sock",
        "readOnly": null
      }
    ],
    "environment": [
      {
        "name": "DD_SITE",
        "value": "datadoghq.com"
      }
    ],
    "requiresCompatibilities": ["EXTERNAL"],
    "secrets": [
      {
          "name": "DD_API_KEY",
          "valueFrom": "/datadog/DATADOG_API_KEY"
      }
    ],
    "healthCheck": {
      "retries": 3,
      "command": ["CMD-SHELL","agent health"],
      "timeout": 5,
      "interval": 30,
      "startPeriod": 15
    }
  }
]